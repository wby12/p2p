<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"
        android:id="@+id/text_title"/>

    <View
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:background="#DEDEDE"/>


    <LinearLayout
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp">


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1.5">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:text="产品金额"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text_money"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text_1"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1.5">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:text="预期年利润"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text_2"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:id="@+id/text_bx"
        android:layout_margin="10dp"
        android:text="本息保障"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>


    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1.5">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:text="锁定期"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text_date"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text_3"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

    <com.bw.p2pinvistment1802.view.CircleProgressView
        android:layout_height="100dp"
        android:layout_width="0dp"
        android:id="@+id/progress_view"
        android:layout_weight="1.5"
        app:round_size="@dimen/dp_60"
        app:circle_stroke="14"
        app:circle_color="@android:color/darker_gray"/>

</LinearLayout>

    <View android:layout_height="10dp" android:layout_width="match_parent" android:background="#25ABDC" android:layout_marginBottom="10dp"/>

</LinearLayout>